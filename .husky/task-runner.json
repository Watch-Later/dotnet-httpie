{
   "tasks": [
      {
         "name": "dotnet-build",
         "command": "dotnet",
         "args": [ "build" ]
      },
      {
         "name": "dotnet-format",
         "command": "dotnet",
         "args": [ "format", "--include", "${staged}" ],
         "include": [ "**/*.cs", "**/*.vb" ]
      }
   ]
}
