<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <NoWarn>$(NoWarn);CS1591</NoWarn>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>http</ToolCommandName>
        <PackageId>dotnet-httpie</PackageId>
        <Title>dotnet-HTTPie</Title>
        <Description>dotnet httpie, a command-line HTTP client</Description>
        <PublishSingleFile>true</PublishSingleFile>
        <PublishTrimmed>true</PublishTrimmed>
        <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    </PropertyGroup>
	<ItemGroup>
		<Import Include="System.CommandLine"/>
		<Import Include="System.CommandLine.Parsing"/>
		<Import Include="WeihanLi.Extensions"/>
	</ItemGroup>
    <ItemGroup>
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.21308.1" />
        <PackageReference Include="WeihanLi.Common" Version="1.0.46" />
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0-preview.7.21377.19" />
    </ItemGroup>
</Project>
